<%
var doc = data.records[0];
var fields = data.fields;
%>
<form id="update" name="update" method="post" action="<%=_.url.action('modify',doc.id)%>">
  <fieldset>
    <label for="uid">Unique Identifier:</label>
    <input type="text" name="uid" id="uid" disabled="" value="<%=doc.id%>" />
    <br />
<% fields.forEach(function(f) { %>
    <label for="<%=f.name%>"><%=_.labeler.get(f.name)%>:</label>
<%- _.field(f, doc[f.name]) %>
    <br />
<% }) %>
  </fieldset>
  <input type="hidden" name="_method" value="put" />
  <button type="submit" name="_redirect" value="..">Save and Close</button>
  <button type="submit" name="_redirect" value="<%=_.url.action('edit', doc.id)%>">Save</button>
</form>
