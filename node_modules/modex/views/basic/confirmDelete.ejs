<% var doc = data.records[0] %>
<% var fields = data.fields %>
<p>Are you sure you want to delete the following record?</p>
<%- _.form(fields, doc, 'show') -%>
<form id="delete" name="delete" method="post" action="<%=_.url.action('modify',doc.id)%>">
  <input type="hidden" name="_method" value="delete" />
  <button type="submit" name="_redirect" value="..">Delete</button>
</form>
<form id="cancel" name="cancel" method="get" action="..">
  <button type="submit">Cancel</button>
</form>