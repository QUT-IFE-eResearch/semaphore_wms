<% var formElements = {}; %>
<% 
  formElements['input'] = function(opt) {
    var accept = opt.accept ? 'accept="'+accept+'"' : '';
    var disabled = opt.disabled ? 'disabled="disabled"' : '';
    var readonly = opt.readonly ? 'readonly="readonly"' : '';
    var checked = opt.checked ? 'checked="checked"' : '';
    var multiple = opt.multiple ? 'multiple="multiple"' : '';
%>
    <input type="<%=opt.type%>" name="<%=opt.name%>" id="<%=opt.id%>" value="<%=opt.value%>" <%=checked%> <%=readonly%> <%=disabled%> <%=multiple%> <%=accept%> />
<% } %>
<% 
  formElements['select'] = function(opt) { 
    var multiple = opt.multiple ? 'multiple="multiple"' : '';
%>
    <select name="<%=opt.name%>" id="<%=opt.id%>" <%=multiple%>>
<%  opt.options.forEach(function(o) { %>
      <option value="o.value">o.text</option>
<%  }); %>
    </select>
<% } %>

