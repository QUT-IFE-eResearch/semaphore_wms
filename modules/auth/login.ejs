<%
var messages = {
  'login' : 'Access is restricted. Please login.',
  'empty' : 'Please enter both username and password.',
  'denied' : 'Access denied. Please enter the correct username and/or password.',
  'default':'Please login.'
}
code = code || 'default';
%>

<div class="login">
<p><%=messages[code]%></p>
<form id="login" name="login" method="post" action="<%=_.url.action('login')%>">
<label for="user">Username:</label>
<input type="text" name="user" />
<br />
<label for="password">Password:</label>
<input type="password" name="password" />
<input type="hidden" name="_redirect" value="<%=redirect%>" />
<br />
<button type="submit" name="submit">Submit</button>
</form>
</div>